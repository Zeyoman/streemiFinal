<form method="post" action="{{ path('app_admin_language_delete', {'id': language.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete' ~ language.id) }}">
    <button class="bg-red-600 text-white p-2 rounded-md w-full mt-4 opacity-60 hover:opacity-100 transition" type="submit">
        &times;
        Supprimer la langue
    </button>
</form>